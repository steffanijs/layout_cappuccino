<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view_view"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="#855E53"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_baseline_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/text_recipe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Cappuccino"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/view_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_time"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_baseline_time"
        app:layout_constraintEnd_toStartOf="@id/image_core"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_view"
        android:tint="#855E53"/>

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 minutos"
        app:layout_constraintEnd_toEndOf="@id/image_time"
        app:layout_constraintStart_toStartOf="@id/image_time"
        app:layout_constraintTop_toBottomOf="@id/image_time"
        android:tint="#855E53"/>

    <ImageView
        android:id="@+id/image_core"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_baseline_core"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_time"
        app:layout_constraintTop_toBottomOf="@id/view_view"
        android:tint="#855E53"/>

    <TextView
        android:id="@+id/text_core"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="54214"
        app:layout_constraintEnd_toEndOf="@id/image_core"
        app:layout_constraintStart_toStartOf="@id/image_core"
        app:layout_constraintTop_toBottomOf="@id/image_core"
        android:tint="#855E53"/>

    <View
        android:id="@+id/view_separator"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_margin="16dp"
        android:background="#855E53"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_time" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="Uma simples e perfeitamente extraída dpse de espresso misturado com leite fresco e chocolate fazem esta bebida deliciosa."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_separator"
        android:tint="#855E53"/>

    <TextView
        android:id="@+id/text_ingredient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Ingredientes"
        android:textStyle="bold"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_description"/>

    <ImageView
        android:id="@+id/image_ingredient_1"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_baseline_chevron_seta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_ingredient"
        android:tint="#855E53"/>

    <TextView
        android:id="@+id/text_ingredient_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1 dose espresso"
        app:layout_constraintTop_toTopOf="@id/image_ingredient_1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/image_ingredient_1"
        app:layout_constraintStart_toEndOf="@id/image_ingredient_1"/>
    <ImageView
        android:id="@+id/image_ingredient_2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_baseline_chevron_seta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_ingredient_1"
        android:tint="#855E53"/>

    <TextView
        android:id="@+id/text_ingredient_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="100 ml de leite"
        app:layout_constraintTop_toTopOf="@id/image_ingredient_2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/image_ingredient_2"
        app:layout_constraintStart_toEndOf="@id/image_ingredient_2"/>
    <ImageView
        android:id="@+id/image_ingredient_3"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_baseline_chevron_seta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_ingredient_2"
        android:tint="#855E53"/>

    <TextView
        android:id="@+id/text_ingredient_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1 colher de chocolate em pó"
        app:layout_constraintTop_toTopOf="@id/image_ingredient_3"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/image_ingredient_3"
        app:layout_constraintStart_toEndOf="@id/image_ingredient_3"/>


</androidx.constraintlayout.widget.ConstraintLayout>